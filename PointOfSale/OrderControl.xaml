<UserControl x:Class="PointOfSale.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="525" d:DesignWidth="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="ItemSelectionButton" Click="ItemSelectionButtonClicked">Item Selection</Button>
        <Button x:Name="CancelOrderButton" Click="CancelOrderButtonClicked" Grid.Column="1">Cancel Order</Button>
        <Button x:Name="CompleteOrder" Click="CompleteOrderButtonClicked" Grid.Column="2">Complete Order</Button>

        <local:MenuItemSelectionControl Grid.Row="1" Grid.ColumnSpan="3" Margin="0,10,-195,66"/>
        <local:OrderSummaryControl Grid.Column="2" Margin="350,57,-440,13" Grid.RowSpan="2"/>
    </Grid>
</UserControl>