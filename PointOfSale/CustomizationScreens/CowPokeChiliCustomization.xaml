<UserControl x:Class="PointOfSale.CustomizationScreens.CowPokeChiliCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <StackPanel>
        <TextBlock FontSize="20">Customize this Chili!</TextBlock>
        <StackPanel Orientation="Vertical">
            <CheckBox IsChecked="{Binding Path=Cheese}" Content="Cheese"/>
            <CheckBox IsChecked="{Binding Path=SourCream}" Content="Sour Cream"/>
        </StackPanel>
    </StackPanel>
</UserControl>
