<UserControl x:Class="PointOfSale.CustomizationScreens.WaterCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock FontSize="26" Text="Water" TextAlignment="Center"/>
            <RadioButton x:Name="SmallButton" Content="Small"/>
            <RadioButton x:Name="MediumButton" Content="Medium"/>
            <RadioButton x:Name="LargeButton" Content="Large"/>
            <CheckBox IsChecked="{Binding Path=Ice}" Content="Ice"/>
        </StackPanel>
    </Grid>
</UserControl>
