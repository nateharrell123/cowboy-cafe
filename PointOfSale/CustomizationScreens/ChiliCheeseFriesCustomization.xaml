<UserControl x:Class="PointOfSale.CustomizationScreens.ChiliCheeseFriesCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock FontSize="20">Customize these Chili Cheese Fries!</TextBlock>
            <StackPanel Orientation="Vertical">
                <CheckBox IsChecked="{Binding Path=Chili}" Content="Chili"/>
                <CheckBox IsChecked="{Binding Path=Cheese}" Content="Cheese"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Size" FontSize="18"/>
                <RadioButton Name="SmallButton" Content="Small"/>
                <RadioButton Name="MediumButton" Content="Medium"/>
                <RadioButton Name="LargeButton" Content="Large"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
