<UserControl x:Class="PointOfSale.CustomizationScreens.JerkedSodaCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Choose Flavor" FontSize="26" TextAlignment="Center"/>
            <RadioButton x:Name="Sarsparilla" Content="Sarsparilla"/>
            <RadioButton x:Name="CreamSoda" Content="Cream Soda"/>
            <RadioButton x:Name="OrangeSoda" Content="Orange Soda"/>
            <RadioButton x:Name="BirchBeer" Content="Birch Beer"/>
            <RadioButton x:Name="RootBeer" Content="Root Beer"/>
            <CheckBox IsChecked="{Binding Path=Ice}" Content="Ice"/>
        </StackPanel>
    </Grid>
</UserControl>
